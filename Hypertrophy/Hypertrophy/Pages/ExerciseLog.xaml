<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hypertrophy.Pages.ExerciseLog">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="Exercise" ItemSelected="Exercise_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding FoodName}" TextColor="Black"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="AddExercise" Clicked="AddExercise_Clicked" Text="Add Exercise"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>