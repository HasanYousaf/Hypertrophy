<?xml version="1.0" encoding="utf-8" ?>
<xctViews:Popup xmlns="http://xamarin.com/schemas/2014/forms"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:xctViews="clr-namespace:Xamarin.CommunityToolkit.UI.Views;assembly=Xamarin.CommunityToolkit"
           x:Class="Hypertrophy.Pages.FoodAdder"
           x:Name="FoodAdderPopup">
    <StackLayout>
        <Entry x:Name="FoodNameInput" Placeholder="Enter food name"/>
        <Entry x:Name="FoodCaloriesInput" Keyboard="Numeric" Placeholder="Enter amount of calories"/>
        <Entry x:Name="FoodProteinInput" Keyboard="Numeric" Placeholder="Enter grams of protein"/>
        <Entry x:Name="FoodFatInput" Keyboard="Numeric" Placeholder="Enter grams of fat"/>
        <Entry x:Name="FoodCarbInput" Keyboard="Numeric" Placeholder="Enter grams of carbs"/>
        <Button x:Name="LogFood" Text="Add" Clicked="LogFood_Clicked" BorderColor="DarkGray"/>
        <Label x:Name="FoodAdderError"/>
    </StackLayout>
</xctViews:Popup>